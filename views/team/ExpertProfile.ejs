        }

        .footer-container {
            max-width: 1200px;
            margin: 0 auto;
            position: relative;
            z-index: 2;
        }

        .footer-content {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            margin-bottom: 3rem;
        }

        .footer-section {
            padding: 1rem;
        }

        .footer-logo {
            font-size: 1.8rem;
            font-weight: 700;
            color: #9333ea;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.5rem;
