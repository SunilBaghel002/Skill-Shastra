.timeline-section {
    padding: 80px 20px; /* Adjust padding for smaller screens */
}

.timeline-container {
    max-width: 1200px;
    margin: 0 auto;
}

.section-header {
    text-align: center;
    margin-bottom: 40px;
}

.section-tag {
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-family: 'Poppins', sans-serif;
}

.section-title {
    font-size: 36px;
    font-weight: 600;
    margin: 10px 0;
    font-family: 'Poppins', sans-serif;
}

.section-description {
    font-size: 16px;
    max-width: 600px;
    margin: 0 auto;
    font-family: 'Poppins', sans-serif;
}

.timeline {
    position: relative;
    margin: 0 auto;
    padding: 20px 0;
}

.timeline::before {
    content: '';
    position: absolute;
    width: 6px;
    top: 0;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
}

.timeline-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    margin: 40px 0;
    width: 100%;
}

.timeline-content {
    width: 45%;
    padding: 20px;
    border-radius: 8px;
}

.timeline-year {
    font-size: 24px;
    font-weight: 600;
    margin-bottom: 10px;
    font-family: 'Poppins', sans-serif;
}

.timeline-title {
    font-size: 20px;
    font-weight: 500;
    margin-bottom: 10px;
    font-family: 'Poppins', sans-serif;
}

.timeline-description {
    font-size: 16px;
    font-family: 'Poppins', sans-serif;
}

.timeline-dot {
    position: absolute;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1;
}

.timeline-item:nth-child(even) .timeline-content {
    order: 2;
}

/* Responsive Styles */
@media (max-width: 768px) {
    .timeline-section {
        padding: 40px 15px;
    }

    .section-title {
        font-size: 28px;
    }

    .section-description {
        font-size: 14px;
    }

    .timeline::before {
        left: 15px;
        transform: none;
    }

    .timeline-item {
        flex-direction: column;
        align-items: flex-start;
