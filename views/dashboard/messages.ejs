                    modalRole.textContent = DOMPurify.sanitize(response.user.role.charAt(0).toUpperCase() + response.user.role.slice(1));
                    profileModal.style.display = "flex";
                  }
                } else {
                  showToast("Failed to fetch profile: " + response.message);
                  console.error("Fetch profile failed:", response.message);
                }
              });
            } else {
              showToast("Please select an admin.");
            }
          });
        }

        if (closeModal) {
          closeModal.addEventListener("click", () => {
            profileModal.style.display = "none";
          });
        }

        if (imageModal) {
          imageModal.addEventListener("click", () => {
            imageModal.style.display = "none";
          });
        }

        if (chatWindow) {
          chatWindow.addEventListener("click", (e) => {
            if (e.target.tagName === "IMG" && !e.target.closest(".audio-container")) {
              if (enlargedImage) {
                enlargedImage.src = DOMPurify.sanitize(e.target.src);
                imageModal.style.display = "flex";
              }
            }
          });
        }

        if (backButton) {
          backButton.addEventListener("click", () => {
            if (chatWindowContainer && userListContainer) {
              chatWindowContainer.classList.remove("active");
              userListContainer.style.display = "block";
              searchMessagesBar.classList.remove("active");
            }
          });
        }

        if (searchButton) {
          searchButton.addEventListener("click", () => {
            if (searchMessagesBar && searchMessagesInput) {
              searchMessagesBar.classList.toggle("active");
              if (searchMessagesBar.classList.contains("active")) {
                searchMessagesInput.focus();
              } else {
                searchMessagesInput.value = "";
                displayMessages(currentMessages);
              }
            }
          });
        }

        if (searchMessagesInput) {
          searchMessagesInput.addEventListener("input", debounce(() => {
            const query = searchMessagesInput.value.trim().toLowerCase();
            if (query) {
              const filteredMessages = currentMessages.filter(msg =>
                msg.content.toLowerCase().includes(query) ||
                msg.sender.name.toLowerCase().includes(query)
              );
              displayMessages(filteredMessages);
            } else {
              displayMessages(currentMessages);
            }
          }, 300));
        }

        if (searchUsersInput) {
          searchUsersInput.addEventListener("input", debounce(() => {
            socket.emit("getUsers", (response) => {
              if (response.status === "success") {
                const query = searchUsersInput.value.trim().toLowerCase();
                let filteredAdmins = response.users || [];
                if (query) {
                  filteredAdmins = filteredAdmins.filter(admin =>
                    admin.name?.toLowerCase().includes(query) ||
                    admin.email?.toLowerCase().includes(query)
                  );
                }
                if (currentCategory === "unread") {
                  filteredAdmins = filteredAdmins.filter(admin => admin.unreadCount > 0);
                }
                updateAdminList(filteredAdmins);
              } else {
                showToast("Failed to fetch admins: " + response.message);
                console.error("Fetch admins failed:", response.message);
                updateAdminList([]);
              }
            });
          }, 300));
        }

        function updateAdminList(admins) {
          console.log("Updating admin list with:", admins);
          if (!userList) {
            console.error("userList element not found");
            return;
          }
          userList.innerHTML = "";
          if (!Array.isArray(admins) || admins.length === 0) {
            userList.innerHTML = '<p style="padding: 1rem; color: #6b7280;">No admins found.</p>';
            return;
          }
          let filteredAdmins = admins;
          if (currentCategory === "unread") {
            filteredAdmins = admins.filter(admin => admin.unreadCount > 0);
          }
          filteredAdmins.forEach(admin => {
            if (!admin._id || !admin.name) {
              console.warn("Skipping invalid admin data:", admin);
              return;
            }
            const adminItem = document.createElement("div");
            adminItem.className = `user-item${admin._id === selectedAdminId ? " selected" : ""}`;
            adminItem.dataset.adminId = admin._id;
            adminItem.innerHTML = `
            <img src="${DOMPurify.sanitize(admin.profileImage || 'https://www.gravatar.com/avatar/?d=retro')}" alt="Admin avatar" />
            <div class="user-info">
              <h3>${DOMPurify.sanitize(admin.name)}</h3>
              <p>${DOMPurify.sanitize(admin.role || 'Admin')}</p>
            </div>
            <span class="message-time">${admin.lastMessage ? formatMessageTime(admin.lastMessage.createdAt) : ''}</span>
            ${admin.unreadCount > 0 ? `<span class="unread-count">${admin.unreadCount}</span>` : ""}
            <button class="favorite-btn ${admin.isFavorite ? 'favorite' : ''}" data-admin-id="${admin._id}">
              <i class="fas fa-star"></i>
            </button>
          `;
            adminItem.addEventListener("click", () => {
              selectedAdminId = admin._id;
              localStorage.setItem("selectedAdminId", selectedAdminId);
              console.log("Selected admin ID:", selectedAdminId);
              selectAdmin(admin);
              if (window.innerWidth <= 768) {
                if (userListContainer && chatWindowContainer) {
                  userListContainer.style.display = "none";
                  chatWindowContainer.classList.add("active");
                }
              }
            });
            const favoriteBtn = adminItem.querySelector(".favorite-btn");
            if (favoriteBtn) {
              favoriteBtn.addEventListener("click", (e) => {
                e.stopPropagation();
                socket.emit("toggleFavorite", { userId: admin._id }, (response) => {
                  if (response.status === "success") {
                    favoriteBtn.classList.toggle("favorite", response.isFavorite);
                    showToast(response.isFavorite ? "Added to favorites" : "Removed from favorites");
                  } else {
                    showToast("Failed to update favorite: " + response.message);
                    console.error("Toggle favorite failed:", response.message);
                  }
                });
              });
            }
            userList.appendChild(adminItem);
          });
          console.log("Admin list updated, items:", userList.children.length);
        }

        function selectAdmin(admin) {
          if (!admin || !admin._id) {
            showToast("Invalid admin selected.");
            return;
          }
          document.querySelectorAll(".user-item").forEach(item => item.classList.remove("selected"));
          const adminItem = document.querySelector(`.user-item[data-admin-id="${admin._id}"]`);
          if (adminItem) adminItem.classList.add("selected");
          if (chatHeaderName && chatHeaderAvatar) {
            chatHeaderName.textContent = DOMPurify.sanitize(admin.name || "Unknown Admin");
            chatHeaderAvatar.src = DOMPurify.sanitize(admin.profileImage || 'https://www.gravatar.com/avatar/?d=retro');
          }
          if (chatWindow) {
            chatWindow.innerHTML = "";
            chatWindow.dataset.lastDate = null;
          }
          socket.emit("getMessages", { userId: admin._id }, (response) => {
            if (response.status === "success") {
              console.log("Received messages:", response.messages.map(m => ({
                id: m._id,
                messageType: m.messageType,
                content: m.content,
                fileMetadata: m.fileMetadata,
              })));
              currentMessages = response.messages;
              displayMessages(response.messages);
            } else {
              showToast("Failed to fetch messages: " + response.message);
              console.error("Fetch messages failed:", response.message);
            }
          });
        }

        // Socket.IO Event Listeners
        socket.emit("getUsers", (response) => {
          console.log("Initial getUsers response:", response);
          if (response.status === "success" && Array.isArray(response.users)) {
            updateAdminList(response.users);
            if (selectedAdminId) {
              const admin = response.users.find(u => u._id === selectedAdminId);
              if (admin) {
                selectAdmin(admin);
                if (window.innerWidth <= 768) {
                  if (userListContainer && chatWindowContainer) {
                    userListContainer.style.display = "none";
                    chatWindowContainer.classList.add("active");
                  }
                }
              } else {
                selectedAdminId = null;
                localStorage.removeItem("selectedAdminId");
                if (chatHeaderName && chatHeaderAvatar) {
                  chatHeaderName.textContent = "Select an admin";
                  chatHeaderAvatar.src = "https://www.gravatar.com/avatar/?d=retro";
                }
                if (chatWindow) chatWindow.innerHTML = "";
                if (window.innerWidth <= 768) {
                  if (chatWindowContainer && userListContainer) {
                    chatWindowContainer.classList.remove("active");
                    userListContainer.style.display = "block";
                  }
                }
              }
            }
          } else {
            showToast("Failed to fetch admins: " + (response.message || "Unknown error"));
            console.error("Initial fetch admins failed:", response);
            updateAdminList([]);
          }
        });

        socket.on("updateUsers", (response) => {
          console.log("Received updateUsers:", response);
          if (response.status === "success" && Array.isArray(response.users)) {
            const query = searchUsersInput ? searchUsersInput.value.trim().toLowerCase() : "";
            let filteredAdmins = response.users;
            if (query) {
              filteredAdmins = filteredAdmins.filter(admin =>
                admin.name?.toLowerCase().includes(query) ||
                admin.email?.toLowerCase().includes(query)
              );
            }
            updateAdminList(filteredAdmins);
            if (selectedAdminId) {
              const admin = filteredAdmins.find(u => u._id === selectedAdminId);
              if (admin) {
                document.querySelectorAll(".user-item").forEach(item => item.classList.remove("selected"));
                const adminItem = document.querySelector(`.user-item[data-admin-id="${selectedAdminId}"]`);
                if (adminItem) adminItem.classList.add("selected");
              } else {
                selectedAdminId = null;
                localStorage.removeItem("selectedAdminId");
                if (chatHeaderName && chatHeaderAvatar) {
                  chatHeaderName.textContent = "Select an admin";
                  chatHeaderAvatar.src = "https://www.gravatar.com/avatar/?d=retro";
                }
                if (chatWindow) chatWindow.innerHTML = "";
                if (window.innerWidth <= 768) {
                  if (chatWindowContainer && userListContainer) {
                    chatWindowContainer.classList.remove("active");
                    userListContainer.style.display = "block";
                  }
                }
              }
            }
          } else {
            showToast("Failed to update admins: " + (response.message || "Unknown error"));
            console.error("Update admins failed:", response);
            updateAdminList([]);
          }
        });

        socket.on("receiveMessage", (msg) => {
          console.log("Received message:", {
            messageId: msg.messageId,
            messageType: msg.messageType,
            content: msg.content,
            fileMetadata: msg.fileMetadata,
            senderId: msg.sender.id,
            receiverId: msg.receiver.id,
            selectedAdminId,
            userId,
          });
          if (
            (msg.sender.id === selectedAdminId && msg.receiver.id === userId) ||
            (msg.sender.id === userId && msg.receiver.id === selectedAdminId)
          ) {
            appendMessage(
              msg.sender.id === userId,
              msg.sender.name,
              msg.content,
              msg.createdAt,
              msg.messageId,
              msg.messageType || "text",
              msg.isRead,
              msg.fileMetadata,
              "delivered"
            );
            socket.emit("getUsers", (response) => {
              if (response.status === "success") {
                updateAdminList(response.users);
              }
            });
          }
        });

        socket.on("updateMessageStatus", (msg) => {
          updateMessageStatus(msg.messageId, "delivered", msg.isRead);
        });

        socket.on("connect_error", (error) => {
          console.error("Socket connection error:", error);
          showToast("Connection error. Retrying...");
          setTimeout(() => socket.connect(), 3000);
        });

        socket.on("disconnect", () => {
          console.log("Socket disconnected");
          socket.emit("rejoinRooms");
        });

        // Category Tabs
        document.querySelectorAll(".category-tab").forEach(tab => {
          tab.addEventListener("click", () => {
            document.querySelectorAll(".category-tab").forEach(t => t.classList.remove("active"));
            tab.classList.add("active");
            currentCategory = tab.dataset.category;
            socket.emit("getUsers", (response) => {
              if (response.status === "success") {
                const query = searchUsersInput ? searchUsersInput.value.trim().toLowerCase() : "";
                let filteredAdmins = response.users || [];
                if (query) {
                  filteredAdmins = filteredAdmins.filter(admin =>
                    admin.name?.toLowerCase().includes(query) ||
                    admin.email?.toLowerCase().includes(query)
                  );
                }
                updateAdminList(filteredAdmins);
              } else {
                showToast("Failed to fetch admins: " + response.message);
                console.error("Fetch admins failed:", response.message);
                updateAdminList([]);
              }
            });
          });
        });

        // Ensure initial state
        if (searchUsersInput) searchUsersInput.value = "";
        document.querySelectorAll(".category-tab").forEach(tab => {
          tab.classList.remove("active");
          if (tab.dataset.category === "all") tab.classList.add("active");
        });
        currentCategory = "all";
      });
    </script>
