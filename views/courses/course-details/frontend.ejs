        color: #1f2937;
        margin-bottom: 1.2rem;
        text-align: center;
      }
      .instructor-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 1.5rem;
      }
      .instructor {
        background: #f8f9ff;
        padding: 1.5rem;
        border-radius: 12px;
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }
      .instructor:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
      }
      .instructor img {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        margin-bottom: 0.75rem;
      }
      .instructor p {
        font-size: 0.95rem;
        color: #6b7280;
      }
      /* Syllabus Section */
      .syllabus-section {
        padding: 6rem 2rem;
        background: white;
      }
      .syllabus-container {
        max-width: 1200px;
        margin: 0 auto;
      }
      .syllabus-container h2 {
        font-size: 2.5rem;
        font-weight: 600;
        color: #1f2937;
        text-align: center;
        margin-bottom: 3rem;
      }
      .syllabus-item {
        background: #f8f9ff;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        transition: all 0.3s ease;
        cursor: pointer;
      }
      .syllabus-item:hover {
        background: rgba(124, 58, 237, 0.05);
        transform: translateX(5px);
      }
      .syllabus-item h3 {
        font-size: 1.25rem;
        font-weight: 500;
        color: #1f2937;
        margin-bottom: 0.5rem;
      }
      .syllabus-item p {
        font-size: 0.9rem;
        color: #6b7280;
      }
      /* Pricing Section */
      .pricing-section {
        padding: 6rem 2rem;
        background: linear-gradient(
          135deg,
          #0f0f23 0%,
          #1a1a3a 50%,
          #2d1b69 100%
        );
      }
      .pricing-container {
        max-width: 1200px;
        margin: 0 auto;
        text-align: center;
      }
      .pricing-container h2 {
        font-size: 2.5rem;
        font-weight: 600;
        color: white;
        margin-bottom: 1.5rem;
      }
      .pricing-container p {
