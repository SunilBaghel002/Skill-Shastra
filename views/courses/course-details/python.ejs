    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family: "Poppins", sans-serif;
        background: linear-gradient(135deg, #f8f9ff 0%, #e8f0ff 100%);
        overflow-x: hidden;
      }
      .back-btn {
        position: fixed;
        top: 100px;
        left: 20px;
        background: linear-gradient(135deg, #7c3aed, #a855f7);
        color: white;
        padding: 0.75rem 1rem;
        border-radius: 8px;
        text-decoration: none;
        font-size: 1.2rem;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        z-index: 1000;
      }
      .back-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(124, 58, 237, 0.4);
      }
      .hero-section {
        min-height: 80vh;
        display: flex;
        align-items: center;
        padding: 6rem 2rem 4rem;
        background: linear-gradient(
          135deg,
          #0f0f23 0%,
          #1a1a3a 50%,
          #2d1b69 100%
        );
        position: relative;
        overflow: hidden;
      }
      .hero-section::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(
            circle at 30% 20%,
            rgba(124, 58, 237, 0.1) 0%,
            transparent 50%
          ),
          radial-gradient(
            circle at 70% 80%,
            rgba(168, 85, 247, 0.1) 0%,
            transparent 50%
          );
        pointer-events: none;
      }
      .hero-container {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        align-items: center;
        z-index: 1;
      }
      .hero-text h1 {
        font-size: 3.5rem;
        font-weight: 700;
        color: white;
        line-height: 1.2;
        margin-bottom: 1.5rem;
      }
      .gradient-text {
        background: linear-gradient(135deg, #7c3aed, #a855f7, #ec4899);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: gradient-shift 3s ease-in-out infinite;
      }
      @keyframes gradient-shift {
        0%,
        100% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
      }
      .hero-text p {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.7);
        line-height: 1.6;
        max-width: 500px;
        margin-bottom: 2rem;
      }
      .hero-video {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 16px;
        aspect-ratio: 16 / 9;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid rgba(124, 58, 237, 0.2);
        transition: all 0.3s ease;
      }
      .hero-video:hover {
        transform: scale(1.02);
        box-shadow: 0 8px 20px rgba(124, 58, 237, 0.2);
      }
      .hero-video i {
        font-size: 3rem;
        color: #7c3aed;
      }
      .hero-video span {
        font-size: 1.2rem;
        color: rgba(255, 255, 255, 0.7);
        margin-left: 1rem;
      }
      .course-details-section {
        padding: 6rem 2rem;
      }
      .details-container {
        max-width: 1200px;
        margin: 0 auto;
      }
      .details-container h2 {
        font-size: 2.5rem;
        font-weight: 600;
        color: #1f2937;
        text-align: center;
        margin-bottom: 3rem;
      }
      .course-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        margin-bottom: 2rem;
        font-size: 0.95rem;
        color: #6b7280;
        justify-content: center;
      }
      .course-meta span {
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }
      .rating {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #f59e0b;
      }
      .course-description {
        font-size: 1rem;
        color: #1f2937;
        line-height: 1.7;
        max-width: 800px;
        margin: 0 auto 2rem;
        text-align: center;
      }
      .details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
      }
      .details-card {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
      }
      .details-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
      }
      .details-card h3 {
