<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Skill Shastra - Dashboard</title>
    <meta
      name="description"
      content="Manage your Skill Shastra courses, track progress, and explore resources."
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/sidebar.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family: "Poppins", sans-serif;
        background: linear-gradient(135deg, #f8f9ff 0%, #e8f0ff 100%);
        color: #1f2937;
        margin-left: 280px;
        transition: margin-left 0.3s ease;
        position: relative;
      }
      .main-content.full {
        margin-left: 0;
      }
      .dashboard-section {
        padding: 4rem 2rem;
        max-width: 1200px;
        margin: 0 auto;
      }
      .welcome-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
      }
      .welcome-header img {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
      }
      .welcome-header h1 {
        font-size: 2rem;
        font-weight: 700;
        color: #7c3aed;
      }
      .section-title {
        font-size: 1.8rem;
        color: #7c3aed;
        margin-bottom: 1.5rem;
        font-weight: 600;
        position: relative;
      }
      .section-title::after {
        content: "";
        position: absolute;
        bottom: -5px;
        left: 0;
        width: 60px;
        height: 4px;
        background: linear-gradient(90deg, #7c3aed, #a855f7);
        border-radius: 2px;
      }
      .courses-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        margin-bottom: 2rem;
        cursor: auto !important;
      }
      .courses-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1.5rem;
      }
      .course-card-2 {
        background: #f8f9ff;
        border-radius: 12px;
        padding: 1.5rem;
        transition: all 0.3s ease;
        border: 1px solid #e5e7eb;
      }
      .course-card-2:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(124, 58, 237, 0.2);
      }
      .course-card-2 h4 {
        font-size: 1.2rem;
        color: #1f2937;
        margin-bottom: 0.5rem;
      }
      .course-card-2 p {
        color: #6b7280;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
      }
      .course-card-2 .progress-bar {
        height: 6px;
        background: #e5e7eb;
        border-radius: 3px;
        overflow: hidden;
        margin-bottom: 1rem;
      }
      .course-card-2 .progress-fill {
        height: 100%;
        background: linear-gradient(90deg, #7c3aed, #a855f7);
        transition: width 0.3s ease;
      }
      .course-card-2 .status-pending {
        color: #f59e0b;
        font-weight: 600;
      }
      .course-card-2 .status-approved {
        color: #10b981;
        font-weight: 600;
      }
      .course-card-2 .course-btn {
        background: linear-gradient(135deg, #7c3aed, #a855f7);
        color: white;
        padding: 0.6rem 1.2rem;
        border: none;
        border-radius: 10px;
        font-size: 0.9rem;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        cursor: pointer;
        transition: all 0.3s ease;
      }
      .course-card-2 .course-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(124, 58, 237, 0.3);
      }
      .info-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        margin-bottom: 2rem;
        display: flex;
        gap: 2rem;
        flex-wrap: wrap;
      }
      .info-item {
        flex: 1;
        min-width: 200px;
        text-align: center;
      }
      .info-item i {
        font-size: 2rem;
        color: #7c3aed;
        margin-bottom: 0.5rem;
      }
      .info-item h3 {
        font-size: 1.2rem;
        color: #1f2937;
        margin-bottom: 0.5rem;
      }
      .info-item p {
        color: #6b7280;
        font-size: 0.9rem;
      }
      .loading-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.8);
        z-index: 3000;
        align-items: center;
        justify-content: center;
      }
      .loading-overlay .spinner {
        border: 4px solid #f3f3f3;
        border-top: 4px solid #7c3aed;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        animation: spin 1s linear infinite;
      }
      @keyframes spin {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }
      @media (max-width: 768px) {
        body {
          margin-left: 0;
        }
        .dashboard-section {
          padding: 3rem 1rem;
        }
        .welcome-header h1 {
          font-size: 1.5rem;
        }
        .courses-grid {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </head>
  <body>
    <%- include('./partials/sidebar') %>
    <div class="loading-overlay" id="loading-overlay">
      <div class="spinner"></div>
    </div>
    <main class="main-content" id="main-content">
      <section class="dashboard-section">
        <% if (user) { %>
        <div class="welcome-header">
          <img
            src="<%= user.profileImage || '/images/default-avatar.jpg' %>"
            alt="User Avatar"
          />
          <h1>Welcome, <%= user.name %>!</h1>
        </div>
        <div class="info-card">
          <div class="info-item">
            <i class="fas fa-book"></i>
            <h3>Active Courses</h3>
            <p id="active-courses">0</p>
          </div>
          <div class="info-item">
            <i class="fas fa-code"></i>
            <h3>Challenges Completed</h3>
            <p id="challenges">0</p>
          </div>
          <div class="info-item">
            <i class="fas fa-envelope"></i>
            <h3>New Messages</h3>
            <p id="new-messages">0</p>
          </div>
        </div>
        <div class="courses-card">
          <h2 class="section-title">Your Courses</h2>
          <div class="courses-grid" id="purchased-courses">
            <!-- Populated by JS -->
          </div>
        </div>
        <div class="courses-card">
          <h2 class="section-title">Recommended Courses</h2>
          <div class="courses-grid" id="recommended-courses">
            <!-- Populated by JS -->
          </div>
        </div>
        <% } else { %>
        <p>
          Please <a href="/signup?redirect=/dashboard">log in</a> to access the
          dashboard.
        </p>
        <% } %>
      </section>
      <%- include('./partials/footer') %>
    </main>
    <script>
      document.addEventListener("DOMContentLoaded", async () => {
        const user = JSON.parse(localStorage.getItem("user") || "{}");
        if (!user.name || !user.email) {
          alert("Please log in to access the dashboard.");
          window.location.href = "/signup?redirect=/dashboard";
          return;
        }

        const loadingOverlay = document.getElementById("loading-overlay");
        if (loadingOverlay) loadingOverlay.style.display = "flex";

        // Update main content margin
        const sidebar = document.querySelector(".sidebar");
        const mainContent = document.querySelector(".main-content");
        if (sidebar && mainContent) {
          if (sidebar.classList.contains("hidden")) {
            mainContent.classList.add("full");
          }
          sidebar.addEventListener("transitionend", () => {
            mainContent.classList.toggle(
              "full",
              sidebar.classList.contains("hidden")
            );
          });
        }

        // Function to map course titles to slugs
        function getCourseSlug(title) {
          const courseMap = {
            "Frontend Development": "frontend",
            "Backend Development": "backend",
            "Full Stack Development": "full-stack",
            "Digital Marketing": "digital-marketing",
            "Data Science": "data-science",
          };
          return courseMap[title] || title.toLowerCase().replace(/\s+/g, "-");
        }

        try {
          // Fetch purchased and recommended courses concurrently
          const [enrollmentsRes, recommendedRes] = await Promise.all([
            fetch("/api/enrollments", { credentials: "include" }),
            fetch("/api/courses/recommended", { credentials: "include" }),
          ]);

          // Purchased courses
          if (!enrollmentsRes.ok) {
            if (enrollmentsRes.status === 401) {
              localStorage.removeItem("user");
              window.location.href = "/signup?redirect=/dashboard";
            }
            throw new Error("Failed to load purchased courses");
          }
          const { enrollments } = await enrollmentsRes.json();
          const purchasedCourses = document.getElementById("purchased-courses");
          const activeCourses = document.querySelector("#active-courses");
          if (purchasedCourses && activeCourses) {
            if (enrollments && enrollments.length) {
              purchasedCourses.innerHTML = enrollments
                .map(
                  (enrollment) => `
                   <div class="course-card-2">
                     <h4>${enrollment.course}</h4>
                     <p>Status: <span class="status-${enrollment.status.toLowerCase()}">${
                    enrollment.status
                  }</span></p>
                     <div class="progress-bar">
                       <div class="progress-fill" style="width: ${Math.floor(
                         Math.random() * 50
                       )}%"></div>
                     </div>
                     <a href="/${getCourseSlug(
                       enrollment.course
                     )}" class="course-btn">View Course</a>
                   </div>
                 `
                )
                .join("");
              activeCourses.textContent = enrollments.filter(
                (e) => e.status === "approved"
              ).length;
            } else {
              purchasedCourses.innerHTML = "<p>No courses enrolled yet.</p>";
              activeCourses.textContent = "0";
            }
          }

          // Recommended courses
          if (!recommendedRes.ok) {
            if (recommendedRes.status === 401) {
              localStorage.removeItem("user");
              window.location.href = "/signup?redirect=/dashboard";
            }
            throw new Error("Failed to load recommended courses");
          }
          const { courses } = await recommendedRes.json();
          const recommendedCourses = document.getElementById(
            "recommended-courses"
          );
          if (recommendedCourses) {
            recommendedCourses.innerHTML = courses.length
              ? courses
                  .map(
                    (course) => `
                 <div class="course-card-2">
                   <h4>${course.title}</h4>
                   <p>${course.description}</p>
                   <p>Duration: ${course.duration}>
                     </p>
                     <a href="/${course.slug}" class="course-btn">View Course</a>
                   </div>
                 `
                  )
                  .join("")
              : "<p>No recommended courses available.</p>";
          }
        } catch (error) {
          console.error("Error loading dashboard data:", error);
          const purchasedCourses = document.getElementById("purchased-courses");
          const recommendedCourses = document.getElementById(
            "recommended-courses"
          );
          if (purchasedCourses) {
            purchasedCourses.innerHTML =
              '<p style="color: #ff0000;">Failed to load courses. Please try again.</p>';
          }
          if (recommendedCourses) {
            recommendedCourses.innerHTML =
              '<p style="color: #ff0000;">Failed to load recommended courses. Please try again.</p>';
          }
          alert("Failed to load dashboard data. Check console for details.");
        } finally {
          if (loadingOverlay) loadingOverlay.style.display = "none";
        }
      });
    </script>
    <script src="/js/sidebar.js"></script>
  </body>
</html>
